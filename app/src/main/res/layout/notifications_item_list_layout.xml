<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_senderBuzz_itemList" />

    <TextView
        android:text="When"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_datetimeBuzz_itemList"
        android:layout_below="@+id/tv_senderBuzz_itemList"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_messageBuzz_itemList"
        android:layout_below="@+id/tv_datetimeBuzz_itemList"
        android:layout_alignParentStart="true" />

</RelativeLayout>
